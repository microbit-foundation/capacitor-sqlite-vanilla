    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2022"],
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "skipLibCheck": true
  },
  "include": ["src"]
